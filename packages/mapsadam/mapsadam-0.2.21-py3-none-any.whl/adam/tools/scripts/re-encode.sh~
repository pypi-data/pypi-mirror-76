#!/usr/bin/env bash
#
# A Simple Shell Script to Upload Media Packages and Log Files
#
# John Poncini
# Video and Informatics Systems Associate
# MAPS Public Benefit Corporation
# 17 September 2019

while read d;
    do data+=($d);
done < "/etc/opt/adam/default.info"
declare -p data

FILEPATH="/var/local/media/${data[0]}_${data[2]}_${data[3]}"

for FILENAME in ${FILEPATH}; do

    FILETYPE=$(echo ${FILENAME} | cut -f2 '.')

    if [ $FILETYPE == "mp4" ]; then
        ffmpeg -i ${FILENAME} -c:v copy ${FILENAME}.tmp
    else    
        ffmpeg ${FILENAME} -c:a copy ${FILENAME}.tmp

#!/usr/bin/python3 -u
# BOTLIB - the bot library !
#
#

import os, sys ; sys.path.insert(0, os.getcwd())

from bot.spc import execute, k, parse_cli

def main():
    c = parse_cli("bot")
    if c.txt:
        k.walk("bot")
        return k.cmd(c.origtxt)
    if "s" in c.opts:
        c.mods += ",csl,cmd,fnd,ent"
    if "o" in c.opts:
        c.mods += ",opr"
    if c.mods:
        k.start()
        k.init(c.mods)
        k.wait()

execute(main)
